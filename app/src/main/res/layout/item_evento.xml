<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:padding="16dp">

    <TextView
        android:id="@+id/nombre_evento"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Evento"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tipo_evento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imagen_evento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tipo_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo de Evento"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toEndOf="@+id/nombre_evento"
        app:layout_constraintStart_toStartOf="@+id/nombre_evento"
        app:layout_constraintTop_toBottomOf="@+id/nombre_evento" />

    <TextView
        android:id="@+id/hora_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hora del Evento"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toEndOf="@+id/tipo_evento"
        app:layout_constraintStart_toStartOf="@+id/tipo_evento"
        app:layout_constraintTop_toBottomOf="@+id/tipo_evento" />

    <TextView
        android:id="@+id/encargado_evento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Encargado del Evento"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintEnd_toEndOf="@+id/hora_evento"
        app:layout_constraintStart_toStartOf="@+id/hora_evento"
        app:layout_constraintTop_toBottomOf="@+id/hora_evento" />

    <ImageView
        android:id="@+id/imagen_evento"
        android:layout_width="157dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/comunidad" />
</androidx.constraintlayout.widget.ConstraintLayout>
